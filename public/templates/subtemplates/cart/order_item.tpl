<div class="product-card">
	<div class="in-order-img">
		<img class="js-order-item-image" src="/public/images/products-images/${image}.jpg" alt="" width="100%"/>
	</div>
	<div class="in-order-content">
		<div class="flex-column">
			<div class="product-name js-order-item-name"><a navid="product/${article}"><h2>${name}</h2></a></div>
			<div class="product-price"><p>${price}</p></div>
		</div>
		<div class="flex-column">${params}</div>
		<div class="flex-column in-order-quantity"><p>${quantity}</p></div>
		<div class="flex-column in-order-price"><p>${full_price}</p></div>
	</div>
</div>